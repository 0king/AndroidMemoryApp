<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="g.m.QstnSlideFragment"
    android:orientation="vertical"
    android:background="@color/photoBackgroundColor"
    android:padding="0dp"
    android:weightSum="1">


<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello beta ji"
        style="?android:textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:paddingTop="40dp"/>-->

    <!-- todo change text styling -->

    <!-- todo increase gap b/w question and answer -->

    <!-- todo button styling -->

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_question"
        android:layout_weight="0.38"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                android:textSize="30sp"
                android:textColor="#141414"
                android:id="@+id/current_level_question"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/option1"
        android:layout_below="@+id/question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:padding="10dp"
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1"
        android:layout_centerHorizontal="true" />

    <Button
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option3"
        android:layout_below="@+id/option2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option4"
        android:layout_below="@+id/option3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option5"
        android:layout_below="@+id/option4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        android:layout_gravity="center"
        android:id="@+id/question"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/toolbar_question"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
