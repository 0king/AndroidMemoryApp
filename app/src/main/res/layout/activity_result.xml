<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g.m.ResultActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greendarker"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_result">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:text="LEVEL"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:id="@+id/current_level_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Coins:"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCoins"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coinsearned"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="30"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/coinslost"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="10"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="earned"
                android:textSize="15sp"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="lost"
                android:textSize="15sp"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Coins: __"
        android:id="@+id/totalCoins"
        android:textSize="35sp"/>




        <Button
            android:layout_weight="1"
            android:layout_gravity="center"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Next Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextLevel"/>


    <!-- todo - remove this button, it is redundant, its task is performed by the back button -->
    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"/>

    <!-- todo - change banner size -->

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer"
        android:layout_gravity="center">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
