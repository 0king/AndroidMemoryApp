<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g.m.MainActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <ImageButton
        android:background="@mipmap/menu37"
        style="@style/MainOtherButtons"
        android:id="@+id/miscButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp" />
        <ImageButton
            android:background="@mipmap/coin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/coin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_text"
            android:textSize="25dp"
            android:text="25"
            android:layout_toStartOf="@+id/coin"
            android:layout_toLeftOf="@+id/coin"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@+id/coin" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- todo kush bind relevant info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_info"/>
        <!--
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2"-->


        <TextView
            style="@style/MainTextView"
            android:text="Observe the picture"
            android:textAlignment="center"
            android:id="@+id/textView3"/>
        <TextView
            style="@style/MainTextView"
            android:text="Answer the questions"
            android:textAlignment="center"
            android:id="@+id/textView4"/>

        <ImageView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mainbraindark"
            android:id="@+id/imageView"/>


        <Button
            android:layout_weight="2"
            android:text="PLAY"
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textSize="50sp"
            android:textColor="@color/textColor"/>


        <Button
            android:text="FREE COINS "
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:textColor="@color/textColor"/>


        <!-- drawableleft -->


        <!-- android:background="?android:attr/selectableItemBackground" - Doing it this way ensures the button is borderless and the correct size. -->

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>
</LinearLayout>


